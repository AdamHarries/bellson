#!/bin/bash

# Change to the "bellson" folder
pushd $(dirname $0)/../ &> /dev/null
bellson=$(pwd -P) 

# fix the model for now. 
model="$bellson/models/"

# get an audio file
audiof=$1

export TF_CPP_MIN_LOG_LEVEL='2'

python3 -u -m bellson.apps.infer --modeld "$model" --audiofile "$audiof" --inc 1

popd &> /dev/null
